<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainmenu"
    android:background="@drawable/background_main">


    <ImageView
        android:id="@+id/menu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/garden_light"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/ic_gardening"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/gardenlight_control"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/toggle_switch"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_colour"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/garden_light"
        app:layout_constraintTop_toBottomOf="@+id/menu" />

    <ImageButton
        android:id="@+id/water_tap"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_tap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garden_light" />

    <ToggleButton
        android:id="@+id/water_controller"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/toggle_switch"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_colour"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/water_tap"
        app:layout_constraintTop_toBottomOf="@+id/gardenlight_control" />

    <ImageButton
        android:id="@+id/aquarium"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_aquarium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water_tap" />

    <ToggleButton
        android:id="@+id/aquarium_control"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/toggle_switch"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_colour"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/aquarium"
        app:layout_constraintTop_toBottomOf="@+id/water_controller" />

    <ImageButton
        android:id="@+id/gas"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_gas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/electricity" />

    <ToggleButton
        android:id="@+id/electricity_control"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_switch"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_colour"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/electricity"
        app:layout_constraintTop_toBottomOf="@+id/menu" />

    <ImageButton
        android:id="@+id/electricity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_electricity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/gas_control"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_switch"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_colour"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/electricity"
        app:layout_constraintTop_toBottomOf="@+id/electricity_control" />

    <ImageButton
        android:id="@+id/green_house"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/ic_green_house"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas" />

    <ToggleButton
        android:id="@+id/greenhouse_control"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_switch"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_colour"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/green_house"
        app:layout_constraintTop_toBottomOf="@+id/gas_control" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/ic_options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/weather"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/ic_weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settings" />

    <ImageButton
        android:id="@+id/graphic_options"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_graphic_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>