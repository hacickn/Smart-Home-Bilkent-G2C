<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgrapoption"
    >

    <ImageButton
        android:id="@+id/text_type"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="273dp"
        android:background="@drawable/ic_fonttype"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/theme_type"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/ic_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_type" />
    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/ic_signs_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/blackhans"
        android:text="GRAPHIC"
        android:textColor="@color/orange_two"
        android:textSize="35sp"
        app:layout_constraintStart_toEndOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="@font/blackhans"
        android:text="SETTINGS"
        android:textColor="@color/orange_two"
        android:textSize="35sp"
        app:layout_constraintStart_toEndOf="@+id/imageView15"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="167dp"
        android:fontFamily="@font/atomic_age"
        android:text="TEXT SETTINGS"
        android:textColor="@color/orange_one"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/text_type"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="103dp"
        android:fontFamily="@font/atomic_age"
        android:text="THEME SETTINGS"
        android:textColor="@color/orange_one"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/theme_type"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />
</androidx.constraintlayout.widget.ConstraintLayout>