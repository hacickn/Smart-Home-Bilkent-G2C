<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <ImageView
        android:id="@+id/tap"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/ic_tap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/exit_water"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="279dp"
        android:layout_marginLeft="279dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/water_control"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="360dp"
        android:background="@drawable/toggle_switch"
        android:text="ToggleButton"
        android:textColor="@drawable/toggle_colour"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/drop_1"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="225dp"
        android:layout_marginLeft="225dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="47dp"
        android:background="@drawable/ic_rain_drops"
        app:layout_constraintBottom_toTopOf="@+id/water_control"
        app:layout_constraintEnd_toStartOf="@+id/drop_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/drop_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/ic_rain_drops"
        app:layout_constraintBottom_toTopOf="@+id/water_control"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/drop_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:background="@drawable/ic_rain_drops"
        app:layout_constraintBottom_toTopOf="@+id/drop_2"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/water_wave"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintEnd_toStartOf="@+id/tap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>