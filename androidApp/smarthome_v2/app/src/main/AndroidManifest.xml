<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarthome_v2">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".settings.AppSettings"></activity>
        <activity android:name=".settings.HomeSettings" />
        <activity android:name=".settings.Settings" />
        <activity android:name=".popup.elecPop"
            android:theme="@style/AppTheme.CustomTheme"
            />
        <activity android:name=".popup.WeatherPop"
            android:theme="@style/AppTheme.CustomTheme"
            />
        <activity android:name=".popup.aquaPop"
            android:theme="@style/AppTheme.CustomTheme"
            />
        <activity android:name=".popup.gasPop"
            android:theme="@style/AppTheme.CustomTheme"
            />
        <activity android:name=".popup.ghPop"
            android:theme="@style/AppTheme.CustomTheme"
            />
        <activity android:name=".popup.alarmPop"
            android:theme="@style/AppTheme.CustomTheme"></activity>
        <activity android:name=".popup.blutPop"
            android:theme="@style/AppTheme.CustomTheme"></activity>
        <activity android:name=".popup.notiPop"
            android:theme="@style/AppTheme.CustomTheme"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main_screen" />
        <activity android:name=".connection_settings" />
        <activity android:name=".gas" />
    </application>

</manifest>