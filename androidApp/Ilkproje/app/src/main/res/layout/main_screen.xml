<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbulb">

    <ImageButton
        android:id="@+id/connection_settings"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_connection_settings"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="306dp" />

    <ImageButton
        android:id="@+id/degree"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_degree"
        app:layout_constraintBottom_toTopOf="@+id/aquarium"
        app:layout_constraintTop_toBottomOf="@+id/connection_settings"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp" />

    <ImageButton
        android:id="@+id/exit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/ic_exit"
        app:layout_constraintStart_toEndOf="@+id/electricity"
        tools:layout_editor_absoluteY="573dp" />

    <ImageButton
        android:id="@+id/aquarium"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/ic_aquarium"
        app:layout_constraintTop_toBottomOf="@+id/connection_settings"
        tools:layout_editor_absoluteX="16dp" />

    <ImageButton
        android:id="@+id/electricity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:background="@drawable/ic_electricity"
        app:layout_constraintStart_toEndOf="@+id/aquarium"
        tools:layout_editor_absoluteY="503dp" />

    <ImageButton
        android:id="@+id/gas"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_gas"
        app:layout_constraintBottom_toTopOf="@+id/sera"
        app:layout_constraintStart_toEndOf="@+id/connection_settings"
        app:layout_constraintTop_toTopOf="@+id/connection_settings" />

    <ImageButton
        android:id="@+id/sera"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_sera"
        app:layout_constraintBottom_toTopOf="@+id/electricity"
        app:layout_constraintStart_toEndOf="@+id/degree"
        app:layout_constraintTop_toTopOf="@+id/connection_settings"
        app:layout_constraintVertical_bias="0.99" />
</androidx.constraintlayout.widget.ConstraintLayout>


